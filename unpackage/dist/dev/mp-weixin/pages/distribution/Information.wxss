.user_info {
  padding: 72rpx 42rpx 0;
}
.user_info .item text {
  color: #707070;
  font-size: 30rpx;
  margin-bottom: 30rpx;
}
.user_info .item text:first-child {
  display: inline-block;
  color: #000;
  font-size: 36rpx;
  font-weight: 700;
  width: 26%;
}
.coupon {
  margin: 0 40rpx;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #000;
  color: #FF9EC3;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  box-sizing: border-box;
}
.coupon view {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.total {
  margin: 10rpx 40rpx 160rpx;
  text-align: right;
  font-weight: 700;
}
.total text {
  color: red;
}
.button {
  position: absolute;
  bottom: 30rpx;
  width: 100%;
  text-align: center;
}
.button button {
  width: 90%;
  color: #fff;
  background-color: #FF85B4;
  border-radius: 80rpx;
}
.radioform {
  padding: 2rpx 42rpx;
  margin: 0rpx 0 60rpx;
  font-size: 34rpx;
}
.radioform .title {
  color: #000;
  font-size: 36rpx;
  font-weight: 700;
  width: 26%;
}
.radioform radio-group {
  display: flex;
  flex-direction: column;
}
.radioform radio-group label {
  margin: 10rpx 0;
  padding: 20rpx;
  box-shadow: 0 0 6rpx 2rpx rgba(0, 0, 0, 0.09);
  border-radius: 10rpx;
  position: relative;
  display: flex;
  justify-content: space-between;
}
.radioform radio-group label radio {
  margin-right: 20rpx;
}
.radioform radio-group .radio {
  background-color: #FF9EC3;
  color: #fff;
}

