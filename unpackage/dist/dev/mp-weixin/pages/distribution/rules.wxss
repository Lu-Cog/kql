.rules_list {
  padding: 60rpx;
}
.rules_list .item {
  display: flex;
  flex-direction: column;
  margin-bottom: 40rpx;
}
.rules_list .item text {
  color: #C4C4C4;
  font-size: 34rpx;
  margin-bottom: 10rpx;
}
.rules_list .item text:first-child {
  color: #000;
  font-size: 38rpx;
  font-weight: 700;
}
.rules_body {
  border: 1px solid #F3F3F3;
  background-color: #F3F3F3;
  height: 100vh;
}
.vip {
  margin: 40rpx;
  display: flex;
  align-items: center;
  margin-bottom: 14rpx;
}
.vip image {
  height: 180rpx;
}
.vip .right {
  height: 180rpx;
  box-sizing: border-box;
  padding: 42rpx 46rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
  background-color: #fff;
  flex: 1;
}
.vip .right .right_r {
  display: flex;
  flex-direction: column;
}
.vip .right .right_r text {
  color: #000;
  font-size: 30rpx;
}
.vip .right .right_r text:first-child {
  font-size: 38rpx;
  margin-bottom: 10rpx;
}

