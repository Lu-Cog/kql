.body {
  height: 100vh;
  background-color: #FF9EC3;
  padding-top: 44rpx;
  text-align: center;
}
.body .img image {
  width: 286rpx;
  height: 286rpx;
}
.body .num {
  font-size: 40rpx;
  color: #fff;
  margin: 20rpx 0;
}
.body .content {
  background-color: #fff;
  margin: 0 70rpx;
  border-radius: 50rpx;
  text-align: center;
  padding: 120rpx 0 60rpx;
}
.body .content .content_top {
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  margin-bottom: 70rpx;
}
.body .content .content_top text {
  font-size: 30rpx;
  font-weight: 600;
}
.body .content .content_top text:first-child {
  margin-right: 20rpx;
}
.body .content .content_top .jian {
  font-size: 40rpx;
}
.body .content .content_top .add {
  font-size: 40rpx;
}
.body .content .content_top .kg {
  position: absolute;
  right: 138rpx;
  bottom: 1rpx;
}
.body .content .content_top input {
  height: 80rpx;
  width: 168rpx;
  background-color: #f3f3f3;
  font-size: 74rpx;
  margin: 0 40rpx;
}
.body .content .content_center {
  display: flex;
  justify-content: center;
  align-items: center;
  color: #FF9EC3;
  margin-bottom: 120rpx;
}
.body .content .content_center .img {
  background-color: #FF9EC3;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.body .content .content_center .img image {
  width: 120rpx;
  height: 120rpx;
}
.body .content .content_center > text {
  margin: 0 60rpx;
  font-size: 40rpx;
}
.body .content .content_center .content_num {
  font-size: 26rpx;
  font-weight: 600;
}
.body .content .content_center .content_num text {
  font-size: 60rpx;
  margin-right: 20rpx;
}
.body .content button {
  background-color: #FF9EC3;
  border-radius: 50rpx;
  border: none;
  outline: none;
  font-size: 36rpx;
  letter-spacing: 4rpx;
  color: #fff;
  width: 312rpx;
}

