.uni-popup__wrapper {
  width: 90%;
  height: 90vh;
  padding: 20rpx;
  border-radius: 20rpx;
}
.uni-popup__wrapper .popupView {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.uni-popup__wrapper button {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #999;
  color: #fff;
}
.uni-popup__wrapper .check {
  background-color: #FF9EC3;
}
.uni-popup__wrapper .title {
  text-align: center;
  margin: 20rpx 0;
}
.uni-popup__wrapper scroll-view {
  height: 78%;
}
.uni-popup__wrapper checkbox-group {
  margin: 10rpx 0 10rpx;
}
.uni-popup__wrapper checkbox-group text {
  color: #FF9EC3;
}
.checkbox {
  margin-top: 60rpx;
}
.checkbox label {
  display: flex;
}
.checkbox label .tiaoyue {
  display: flex;
}
.checkbox label .tiaoyue navigator {
  color: #FF9EC3;
  text-decoration: underline;
}
.body {
  padding: 60rpx 50rpx;
}
.item {
  font-size: 34rpx;
  margin-bottom: 40rpx;
}
.item .tip {
  font-size: 28rpx;
  color: #FF9EC3;
}
.item > input {
  margin-top: 10rpx;
  width: 100%;
  height: 80rpx;
  font-size: 30rpx;
  padding-left: 20rpx;
  line-height: 80rpx;
  box-sizing: border-box;
  border: 1rpx solid #999;
  border-radius: 10rpx;
}
.item .yzm {
  display: flex;
  align-items: center;
}
.item .yzm input {
  margin-top: 10rpx;
  flex: 1;
  margin-right: 40rpx;
  height: 80rpx;
  font-size: 30rpx;
  padding-left: 20rpx;
  line-height: 80rpx;
  box-sizing: border-box;
  border: 1rpx solid #999;
  border-radius: 10rpx;
}
.item .yzm button {
  width: 240rpx;
  text-align: center;
  height: 80rpx;
  font-size: 30rpx;
  line-height: 80rpx;
  box-sizing: border-box;
  border-radius: 10rpx;
}
.radioform {
  margin-top: 60rpx;
  font-size: 34rpx;
}
.radioform .title {
  font-size: 38rpx;
}
.radioform radio-group {
  display: flex;
  flex-direction: column;
}
.radioform radio-group label {
  margin: 30rpx 0 60rpx;
  position: relative;
}
.radioform radio-group label radio {
  margin-right: 20rpx;
}
.radioform radio-group label::before {
  content: '(目前僅限用複合式15kg瓦斯)';
  position: absolute;
  bottom: -40rpx;
  left: 70rpx;
}
.radioform radio-group label:last-child::before {
  content: '(目前僅限用複合式20kg瓦斯)';
  position: absolute;
  bottom: -40rpx;
  left: 70rpx;
}
.btn {
  margin: 40rpx auto 80rpx;
  background-color: #FF9EC3 !important;
  color: #fff !important;
  border: none;
  border-radius: 100rpx;
  height: 80rpx;
  line-height: 80rpx;
  width: 90%;
}
button::after {
  border: none;
}

