.news .no {
  padding-top: 100rpx;
  text-align: center;
  color: #999999;
}
.news .item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 30rpx 30rpx 50rpx;
  border-bottom: 1px solid #eee;
  box-sizing: border-box;
}
.news .item > image {
  width: 70rpx;
  height: 70rpx;
}
.news .item > image:first-child {
  width: 50rpx;
  height: 50rpx;
}
.news .item .center {
  flex: 1;
  margin-left: 30rpx;
  width: 80%;
  box-sizing: border-box;
}
.news .item .center view {
  font-size: 32rpx;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.news .item .center view:first-child {
  font-weight: 700;
}
.news .item .center view:last-child {
  width: 100%;
}

