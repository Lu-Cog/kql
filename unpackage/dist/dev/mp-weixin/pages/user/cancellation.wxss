.page {
  background-color: #eee;
  min-height: 100vh;
}
.info {
  padding: 40rpx;
  background-color: #fff;
}
.info .m20 {
  margin: 20rpx 0;
}
.tip {
  padding: 20rpx;
  background-color: #eee;
  font-size: 32rpx;
  font-weight: 700;
}
.item {
  background-color: #fff;
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
}
.item image {
  width: 100rpx;
  height: 100rpx;
  margin-right: 30rpx;
}
.item text {
  color: #FF9EC3;
  font-weight: 700;
  margin: 0 10rpx;
}
.border {
  border-bottom: 8rpx solid #eee;
}
.form {
  padding: 40rpx;
}
.form .m20 {
  margin-bottom: 20rpx;
}
.form .radio {
  display: flex;
  margin-bottom: 10rpx;
}
.form .btn {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 20rpx 0;
}
.form .btn .btni {
  width: 45%;
  background-color: #FF9EC3;
  color: #fff;
  padding: 14rpx 0;
  text-align: center;
  border-radius: 10rpx;
}
textarea {
  background-color: #fff;
  width: 100%;
  border: 1rpx solid #999;
  border-radius: 20rpx;
  height: 100px;
  padding: 10px;
  box-sizing: border-box;
}

